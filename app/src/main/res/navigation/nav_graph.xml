<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/sampleFragment">


    <fragment
        android:id="@+id/sampleFragment"
        android:name="com.hackyeon.navigationtest.fragment.SampleFragment"
        android:label="fragment_sample"
        tools:layout="@layout/fragment_sample" >
        <action
            android:id="@+id/action_sampleFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
        <action
            android:id="@+id/action_sampleFragment_to_thirdFragment"
            app:destination="@id/thirdFragment" />
        <action
            android:id="@+id/action_sampleFragment_to_testActivity"
            app:destination="@id/testActivity" />
    </fragment>

    <fragment
        android:id="@+id/secondFragment"
        android:name="com.hackyeon.navigationtest.fragment.SecondFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second" />
    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.hackyeon.navigationtest.fragment.ThirdFragment"
        android:label="fragment_third"
        tools:layout="@layout/fragment_third" />
    <activity
        android:id="@+id/testActivity"
        android:name="com.hackyeon.navigationtest.TestActivity"
        android:label="activity_test"
        tools:layout="@layout/activity_test" />

</navigation>